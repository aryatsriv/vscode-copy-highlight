{
  "name": "copy-highlight",
  "displayName": "Copy Highlight",
  "description": "Visual feedback when copying text - briefly highlights selected text to confirm copy operations",
  "version": "1.2.1",
  "author": "Aryat Srivastava",
  "publisher": "octo-potato",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/aryatsriv/vscode-copy-higlight.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyHighlight.copy",
        "title": "Copy with Highlight"
      }
    ],
    "configuration": {
      "title": "Copy Highlight",
      "properties": {
        "copyHighlight.backgroundColor": {
          "type": "string",
          "default": "#ffff00",
          "description": "Background color for copy highlighting (hex color)"
        },
        "copyHighlight.transparency": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Transparency level for copy highlighting (0 = fully transparent, 1 = fully opaque)"
        },
        "copyHighlight.duration": {
          "type": "number",
          "default": 200,
          "minimum": 100,
          "maximum": 5000,
          "description": "Duration in milliseconds to show the highlight"
        }
      }
    },
    "keybindings": [
      {
        "command": "copyHighlight.copy",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}
